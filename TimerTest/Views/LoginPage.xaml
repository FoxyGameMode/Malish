<Page x:Class="TimerTest.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TimerTest.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="LoginPage">

    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Логин:"
                       FontSize="22"/>
            <TextBox Name="TxbLogin"
                     Width="220"
                     Height="40"
                     FontSize="20"
                     TextAlignment="Center">
                <TextBox.Effect>
                    <DropShadowEffect BlurRadius="10"
                                      Opacity="0.2"/>
                </TextBox.Effect>
            </TextBox>
            <TextBlock Text="Пароль:"
                       FontSize="22"/>
            <PasswordBox Name="TxbPassword"
                         Width="220"
                         Height="40"
                         HorizontalContentAlignment="Center">
                <PasswordBox.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
                </PasswordBox.Effect>
            </PasswordBox>
            <Button Content="Войти"
                    Background="WhiteSmoke"
                    FontSize="18"
                    Margin="15 15" Click="Login_Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
